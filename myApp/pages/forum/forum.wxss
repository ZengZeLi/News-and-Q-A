.questionCard{
  background:whitesmoke;
  width:95%;
  margin:0 auto;
  /* border:1px solid black; */
  border-top:12rpx solid #f60;
  margin-bottom:20rpx;
  padding-bottom:5rpx;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}
.questionCard:after{
  content:'';
  display:block;
  clear:both;
}
.cardLeft{
  width:200rpx;
  overflow:hidden;
  float:left;
}
.cardLeft>image{
  width:180rpx;
  height:180rpx;
  margin:10rpx;
  border-radius:15rpx;
}
.cardRight{
  width:500rpx;
  float:left;
  height:180rpx;
  position:relative;
  margin-top:10rpx;
}
.title{
  padding:5rpx;
  width:100%;
  font-size:34rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break:break-all;
}
.msg{
  position:absolute;
  bottom:0;
}
.msg:after{
  content:'';
  display:block;
  clear:both;
}
.author{
  font-size:28rpx;
  color:#404040;
  margin-left:15rpx;
  /* float:left; */
}
.time{
  font-size:28rpx;
  color:#404040;
  float:left;
  margin-left:15rpx;
}
.views{
  font-size:28rpx;
  color:#404040;
  margin-left:20rpx;
  float:left;
}

.edit{
  width:120rpx;
  height:120rpx;
  background:white;
  position:fixed;
  z-index:100;
  bottom:0;
  right:0;
  border-radius:50%;
  margin:0 20rpx 20rpx 0;
  box-shadow: darkgrey 0px 0px 15rpx 5rpx ;
}


